.page-order
  &__stepper
    .v-stepper
      &__step__step
        width 2vw
        height 2vw
        font-size 1.2vw
      &__label
        font-size 1vw
  h3
    font-size 1.2vw
    text-align center
  &__form--person-info
    display flex
    flex-wrap wrap
  &__footer
    display flex
    justify-content flex-end
    button
      font-size 1.4vw
      letter-spacing $letter-spacing-2
      height 3vw
  &__button-primary
    width 13vw
    height 3vw
    letter-spacing $letter-spacing-p
  &__notice
    &-title
      padding-left 2vw
      font-size 1.2vw
    &-content
      white-space pre-wrap
      font-size 1.3vw
      letter-spacing .2vw
      &--title
        font-size $font-size-p
        letter-spacing $letter-spacing-p
    &-checkbox
      justify-content center
  &__order-info
    > div
      > span
        font-size 1vw
        letter-spacing $letter-spacing-2
        display inline-block
        &:nth-of-type(1)
          min-width 8.5vw
          text-align right
