.index-location
  &__intro
    position relative
    z-index 0
    &:before
      content ''
      display inline-block
      position absolute
      top 0
      left 0
      margin-left -2.17vw
      background-image url('../assets/bg_image/bg_location.jpg')
      background-size 95.44vw 63.63vw
      min-width 72.01vw
      height 62.1vw
      z-index -1
    p
      white-space pre-line
      font-size $font-size-p
      letter-spacing $letter-spacing-h2
      padding-top 9.16vw
      padding-left 8.86vw
  &__content
    z-index 1
    padding-top 10.85vw
    margin-left -1vw
  &__button
    text-decoration none
    width 17.23vw
    height 18.06vw
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    border-radius 2.5vw
    margin 0.8vw 0
    border 1px solid transparent
    &:hover
      box-shadow 0px 0px 0px 0.4vw #fff, 0px 0px 5vw 8px #fff
      position relative
      &:before
        content ''
        position absolute
        top 30%
        left 100%
        width 9.583vw
        height 6.822vw
        margin-left 2.71vw
    &--0
      &:hover
        &:before
            background-image url('../assets/button/icon_position_active.svg')
    &--1
      &:hover
        &:before
            background-image url('../assets/button/icon_ship_active.svg')
    &--2
      &:hover
        &:before
            background-image url('../assets/button/icon_airplane_active.svg')
    &--icon
      width 11.52vw
      height 9.84vw
      min-width 100%
    &--title
      font-size 1.56vw
      letter-spacing $letter-spacing-h3