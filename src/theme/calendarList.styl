.calendar-list
  // padding 0 5vw
  &__year
    h2
      text-align center
  &__date-list
    display flex
    flex-wrap wrap

$marginBase = 14.28
.calendar-date
  &__basis
    flex-basis 14.28%
    padding 1vw 0
  for idx in (1..6)
    &--offset-left-{idx}
      margin-left ($marginBase * idx)%
  for idx in (1..6)
    &--offset-right-{idx}
      margin-right ($marginBase * idx)%
  &__row
    display flex
    font-size $font-size-p
    align-items center
    justify-content center
    position relative
    &:before
      content ''
      opacity 0
      bottom 0
      transition opacity 0.4s, bottom 0.2s
    &:hover
      &:before
        content attr(data-room-name)
        opacity 1
        position absolute
        left 0
        bottom 100%
        background-color #ccc
        border-radius 10px
        padding .1vw .4vw
        font-size 1.3vw
        letter-spacing .4vw
        white-space nowrap
        z-index 1
    &.tool-tip__color-info
      &:hover:before
        background-color #41BBD6
    &.tool-tip__color-success
      &:hover:before
        background-color #94BF80
    &.tool-tip__color-error
      &:hover:before
        background-color #E96143
    &.tool-tip__color-warning
      &:hover:before
        background-color #FFC107
  &__title
    text-align center
    p
      letter-spacing $letter-spacing-2
  &__room-available
    p
      margin 0
      font-size 1.2vw
  &__dot
    font-size .8vw
    vertical-align middle