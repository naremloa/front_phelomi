.date-range
  .v-picker
    width 100%
  .v-date-picker-table
    .v-btn.accent--text
      color var(--v-primary-base) !important
      z-index 1
      border 0
    table
      border-collapse collapse
    &--date
      .v-btn
        width 100%
    &__events
      top 0
      left 0
      right 0
      bottom 0
      width 100%
      height 100%
      z-index -1
      .date-range__date-in-range
        width 100%
        height 100%
        border-radius 0
        &.date-range__range-start
          border-top-left-radius 50%
          border-bottom-left-radius 50%
        &.date-range__range-end
          border-top-right-radius 50%
          border-bottom-right-radius 50%
