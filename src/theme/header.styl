.header
  background-image url('../assets/bg_image/bg_header.jpg')
  background-repeat no-repeat
  background-size cover
  &__logo
    min-width 24.21vw
    width 24.21vw
    margin-right 2.5vw
    cursor pointer
    img
      width 100%
      height auto
  &__menu
    width 68.17%
    height 26.26%
  &__button
    display flex
    text-decoration none
    margin-right .5vw
    &__head
      background-image url('../assets/button/button_header_head.svg')
      background-repeat no-repeat
      width 3.8vw
      height 100%
    &:hover
      .header__button__head
        background-image url('../assets/button/button_header_head_active.svg')
        background-repeat no-repeat
        display flex
        justify-content center
        align-items center
        &:after
          content ''
          box-shadow 0px 0px 50px 20px #F7F3F2
          width 1px
          height 1px
          z-index -1
          margin-right -8%
          margin-bottom -33%
    &__body
      color #fff
      font-weight bold
      font-size 0.93vw
      padding-top 1.1vw
      display flex
      flex-wrap nowrap
      justify-content center
      align-items center
      z-index -2
      &__front
      &__end
        height 100%
        width auto
      &__front
        margin-left -1.3vw
      &__text
        white-space nowrap
        display flex
        height 100%
        justify-content center
        align-items center
        background-color #142952
        margin-left -1.5px
        margin-right -1px
        letter-spacing $letter-spacing-2
  &__social
    width 12.37vw
    height 2.45vw
    position absolute
    top 1.96vw
    right 4.03vw