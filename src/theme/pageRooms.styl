.page-rooms
  &__space
    margin-bottom 3.75vw
  &__content
    padding-left 7.25vw
    padding-right 7.25vw
    > .layout
      > .flex:nth-of-type(1)
        flex-basis auto !important
      > .flex:nth-of-type(2)
        max-width none
    p
    li
      letter-spacing $letter-spacing-p
  &__left
  &__right
    display flex
    flex-direction column
  &__left
    padding-left 3.99vw
    width 57.23vw
  &__right
    margin-right 2.42vw
    width 23.63vw
    display inline-block
    a
      text-decoration none
      display inline-block
      border-radius 50%
  &__theme
    width 15.72vw
    height 5.54vw
    border-radius 1vw
    font-size $font-size-h3
    letter-spacing $letter-spacing-h3
    text-align center
    line-height 5.54vw
    margin-bottom 3.75vw
  &__services-icon
    display flex
    flex-direction row
    margin-top 1.7vw
    flex-wrap wrap
  &__icon-list
    flex 100%
    padding-left 1vw
    &--icon
      font-size 1.3vw
      line-height 2vw
      padding .15vw 0
      i
        font-size $font-size-p
      span
        padding-left 0.4vw
  ul
    padding-left 2vw
  &__text
    white-space pre-wrap
    font-size 1.56vw
    line-height 3vw
  &__order-btn
    min-width 19.09vw
    min-height 19.09vw
    font-size 4.72vw
    border-radius 50%
    font-weight bold
    letter-spacing $letter-spacing-h3
    margin 0 auto
    .v-btn__content
      white-space pre-line
      line-height 5.8vw
