.index-topic
  padding $padding-md-h $padding-md-w
  position relative
  &--fun
    background-size 100.11vw 68.42vw
  &--order
    background-size 100.38vw 92.81vw
    margin-bottom -14.8vw
  &__title
    flex-basis auto !important
  &__intro
    flex-basis auto
    width 100%
    max-width none
    p
      font-size 1.45vw
      letter-spacing $letter-spacing-p
      display inline-block
      white-space pre-line
      position absolute
      top 7vw
      right 0
      padding-right 2vw
  &__carousels
    box-shadow none !important
    .v-carousel__prev
    .v-carousel__next
      .v-btn__content
        width 2.4vw
        position relative
        background var(--v-primary-base)
        height 2.4vw
        i
          font-size 3.64vw !important
          position absolute
          top 50%
          left 50%
          transform translate(-50%,-50%)