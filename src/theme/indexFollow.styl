.index-follow
  padding 1vw 2.5vw
  &__outer
    display flex
  &__button
    text-decoration none
    width 20.15vw
    height 20.15vw
    display flex
    justify-content center
    align-items center
    border-radius 3vw
    border 1vw solid
    &--info
      border-color var(--v-info-base)
    &--warning
      border-color var(--v-warning-base)
    &--error
      border-color var(--v-error-base)
  &__text
    font-size 3vw
    white-space pre-line
    font-weight bold
    letter-spacing $letter-spacing-p
    text-align center