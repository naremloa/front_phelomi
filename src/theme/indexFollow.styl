.index-follow
  padding 1vw 2.5vw
  &__outer
    display flex
  &__button
    text-decoration none
    width 20.15vw
    height 20.15vw
    display flex
    justify-content center
    align-items center
    border-radius 3vw
    border 1vw solid
    &--info
      border-color var(--v-info-base)
    &--warning
      border-color var(--v-warning-base)
    &--error
      border-color var(--v-error-base)
    &:hover
      background-image url('../assets/button/button_bg_follow.jpg')
      background-repeat no-repeat
      background-size 36.45vw 23.95vw
      background-position -7.27vw -3.63vw
      border-width .5vw
      p
        color white !important
  &__text
    margin 0
    font-size 3vw
    white-space pre-line
    font-weight bold
    letter-spacing $letter-spacing-p
    text-align center