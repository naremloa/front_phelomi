.form
  &__checkbox-other-group
    display flex
    white-space nowrap
    .v-input--checkbox
      margin-left .4vw
      margin-right .5vw
    .form__label
      padding-top 1vw
    &--other-input
      min-width 150px
  &__radio-other-group
    .form__label
      padding-top 5px
    &--other-input
      padding 0
      margin 0
      .v-text-field__details
        display none
      .v-input__slot
        margin 0 !important
    // .v-text-field
  &__label
    font-size 16px
    color rgba(0,0,0,0.54)
    line-height 20px
    margin 0
    padding-right 1vw

.text-align-end
  text-align end

.cursor-pointer
  cursor pointer
.letter-space-zero
  letter-spacing normal !important

img
  &.lg
  &.sm
    background-position center
    background-repeat no-repeat
    background-size cover
    display inline-block
  &.lg
    background-image url('../assets/bg_image/bg_placeholder.jpg')
  &.sm
    background-image url('../assets/img_sm/placeholder.jpg')

.overflow-scroll-y
  overflow-x scroll