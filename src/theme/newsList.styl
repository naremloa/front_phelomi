.news-list
  padding 0 2.8vw 2vw
  &__img
    img
      max-width 24.86vw
      height 16.54vw
      padding 0 5.83vw
      min-width 100%
  &__content
    padding-right 5.38vw
  &__title
    h2
      padding-bottom 1.64vw
      font-size $font-size-h2
      letter-spacing $letter-spacing-h2
  &__intro
    padding-top .6vw
    p
      font-size $font-size-p
      letter-spacing $letter-spacing-h3
      margin-bottom 1vw
  &__more
    min-height auto
    line-height 1vw
    &-btn
      width 11.20vw
      height 3.47vw
      margin 0
      padding 0
      font-size 1.35vw
      border-radius 17px
      letter-spacing $letter-spacing-2
      min-width auto